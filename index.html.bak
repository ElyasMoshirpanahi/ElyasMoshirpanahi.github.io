    <script>
        // --- SOUND SYSTEM ---
        class SoundSystem {
            constructor() {
                this.ctx = null;
                this.enabled = true;
                this.initialized = false;
                this.music = document.getElementById("bg-music");
                if (this.music) this.music.volume = 0.5;

                // Attach event listeners to the whole document to initialize audio context on first interaction
                this.boundInit = this.init.bind(this);
                ['click', 'keydown', 'touchstart'].forEach(event => {
                    document.addEventListener(event, this.boundInit, { once: true });
                });
            }

            init() {
                if (this.initialized) return;
                
                try {
                    const AudioContext = window.AudioContext || window.webkitAudioContext;
                    this.ctx = new AudioContext();
                    
                    if (this.ctx.state === 'suspended') {
                        this.ctx.resume();
                    }

                    this.initialized = true;
                    
                    // Start music if enabled
                    if (this.enabled && this.music && this.music.paused) {
                        this.music.play().catch(e => console.log("Music start failed", e));
                    }

                    // Startup chirp
                    this.playTone(880, 'sine', 0.1, 0.05);

                } catch (e) {
                    console.error("Audio init failed", e);
                }
            }

            toggle() {
                this.enabled = !this.enabled;
                
                if (this.music) {
                    if (this.enabled) {
                        if (this.initialized && this.ctx && this.ctx.state === 'suspended') {
                            this.ctx.resume();
                        }
                        this.music.play().catch(e => console.log("Music play failed", e));
                    } else {
                        this.music.pause();
                    }
                }

                return this.enabled;
            }

            playTone(freq, type, duration, vol = 0.1) {
                if (!this.enabled || !this.initialized || !this.ctx) return;
                try {
                    const osc = this.ctx.createOscillator();
                    const gain = this.ctx.createGain();
                    osc.type = type;
                    osc.frequency.setValueAtTime(freq, this.ctx.currentTime);
                    gain.gain.setValueAtTime(vol, this.ctx.currentTime);
                    gain.gain.exponentialRampToValueAtTime(0.01, this.ctx.currentTime + duration);
                    osc.connect(gain);
                    gain.connect(this.ctx.destination);
                    osc.start();
                    osc.stop(this.ctx.currentTime + duration);
                } catch (e) { console.log("Audio error", e); }
            }

            playHover() { this.playTone(800, 'sine', 0.05, 0.05); }
            playClick() { this.playTone(300, 'square', 0.1, 0.1); }
            playType() { this.playTone(1200, 'triangle', 0.03, 0.02); }
        }

        const soundSys = new SoundSystem();
        const toggleBtn = document.getElementById('sound-toggle');

        toggleBtn.addEventListener('click', (e) => {
            e.stopPropagation(); // Handled by btn logic
            
            // Ensure init is called if button is the first thing clicked
            if (!soundSys.initialized) soundSys.init();

            const isOn = soundSys.toggle();
            toggleBtn.textContent = isOn ? "Sound: ON" : "Sound: OFF";
            toggleBtn.classList.toggle('muted', !isOn);
            if (isOn) soundSys.playClick();
        });

        // Attach sound to interactive elements
        document.querySelectorAll('a, button, .project-card, .stat-card').forEach(el => {
            el.addEventListener('mouseenter', () => soundSys.playHover());
            el.addEventListener('click', () => soundSys.playClick());
        });

        // --- BLADE ANIMATION ON LOAD ---
        window.onload = () => {
            // Ensure page starts at the top
            window.scrollTo(0, 0);

            setTimeout(() => {
                document.body.classList.add('loaded');
            }, 500);
            
            // Start Beam Scheduler
            scheduleBeam();
        };

        // --- BEAM SCHEDULER (Fires exactly twice per 60 seconds) ---
        function scheduleBeam() {
            // First immediate call or wait? Let's wait 30s.
            setTimeout(() => {
                triggerBeam();
                scheduleBeam(); // Recursively schedule
            }, 30000); 
        }

        const laserSounds = [
            'sounds/pulse_sound_try1-89547.mp3',
            'sounds/science-fiction-effect-011-305477.mp3',
            'sounds/science-fiction-effect-015-305473.mp3',
            'sounds/science-fiction-effect-019-305479.mp3',
            'sounds/science-fiction-effect-020-305484.mp3'
        ];

        let currentBeamAudio = null;

        function triggerBeam() {
            const beamContainer = document.getElementById('beam-container');
            const station = document.getElementById('tron-station');

            beamContainer.classList.add('beam-active');
            station.classList.add('station-active');

            if (soundSys && soundSys.enabled && soundSys.initialized) {
                const randomSound = laserSounds[Math.floor(Math.random() * laserSounds.length)];
                currentBeamAudio = new Audio(randomSound);
                currentBeamAudio.volume = 0.6;

                currentBeamAudio.play().then(() => {
                    const audioDuration = currentBeamAudio.duration || 3; // Default 3s if unavailable
                    const audioDurationMs = audioDuration * 1000;

                    let dynamicStyle = document.getElementById('dynamic-beam-style');
                    if (!dynamicStyle) {
                        dynamicStyle = document.createElement('style');
                        dynamicStyle.id = 'dynamic-beam-style';
                        document.head.appendChild(dynamicStyle);
                    }

                    dynamicStyle.textContent = `
                        .beam-active .beam-core {
                            animation: beamFireSequence ${audioDuration}s ease-out forwards !important;
                        }
                        .station-active .st-core-pulse {
                            animation: coreOverload ${audioDuration}s ease-out forwards !important;
                        }
                    `;

                    setTimeout(() => {
                        beamContainer.classList.remove('beam-active');
                        station.classList.remove('station-active');
                    }, audioDurationMs);
                }).catch(err => {
                    console.log("Audio playback failed:", err);
                    setTimeout(() => {
                        beamContainer.classList.remove('beam-active');
                        station.classList.remove('station-active');
                    }, 3000);
                });
            } else {
                 // Silent mode fallback
                setTimeout(() => {
                    beamContainer.classList.remove('beam-active');
                    station.classList.remove('station-active');
                }, 3000);
            }
        }


        // --- CARD EXPANSION ---
        function toggleCard(card) {
            card.classList.toggle('expanded');
        }

        // --- TERMINAL LOGIC ---
        const input = document.getElementById('cmd-input');
        const outputContainer = document.getElementById('terminal-output');
        const inputLine = document.querySelector('.input-line');

        const commands = {
            'help': [
                "Available commands:",
                "- about: Display summary info",
                "- list_experience: Show work history",
                "- list_projects: Show key projects",
                "- show_stack: List technical skills",
                "- contact: Show contact details",
                "- clear: Clear terminal"
            ],
            'about': [
                "Elyas Moshirpanahi",
                "Senior Generative AI Engineer.",
                "Specializing in LLMs, Autonomous Agents, and Scalable Systems.",
                "Based in: Global / Remote"
            ],
            'list_experience': [
                "1. Machine Learning Engineer (2023-Present)",
                "2. Full Stack Dev & PM @ YIWU Dar (2021-2023)",
                "3. PHP Developer @ Nika Herb (2019-2021)"
            ],
            'list_projects': [
                "* Market Sentinel (AAIC Winner) - LSTM Trading Bot",
                "* FaceCup Vision - Identity Verification",
                "* SecureNet VPN - High-Scale Infra",
                "* RAG Knowledge Agent - Doc QA System"
            ],
            'show_stack': [
                "LANGUAGES: Python, PHP, JavaScript, C++, Kotlin",
                "AI/ML: PyTorch, TensorFlow, LangChain, LlamaIndex",
                "INFRA: Docker, Kubernetes, Linux, AWS"
            ],
            'contact': [
                "LinkedIn: linkedin.com/in/elyasmoshirpanahi",
                "Email: contact@elyas.dev"
            ]
        };

        input.addEventListener('keydown', function (e) {
            if (this.value.length > 0 && e.key !== 'Enter') {
                soundSys.playType();
            }

            if (e.key === 'Enter') {
                soundSys.playClick();
                const cmd = this.value.trim().toLowerCase();

                // Add old input line to history
                const historyLine = document.createElement('div');
                historyLine.className = 'output-line';
                historyLine.innerHTML = `<span style="color:#ff00ff; margin-right:10px;">elyas@genai:~$</span> ${this.value}`;
                outputContainer.insertBefore(historyLine, inputLine);

                // Process command
                if (cmd === 'clear') {
                    // Remove all output lines except the input line
                    const lines = outputContainer.querySelectorAll('.output-line');
                    lines.forEach(line => line.remove());
                } else if (commands[cmd]) {
                    commands[cmd].forEach(text => {
                        const responseLine = document.createElement('div');
                        responseLine.className = 'output-line';
                        responseLine.style.color = '#ccc';
                        responseLine.textContent = text;
                        outputContainer.insertBefore(responseLine, inputLine);
                    });
                } else if (cmd !== '') {
                    const errorLine = document.createElement('div');
                    errorLine.className = 'output-line';
                    errorLine.style.color = '#ff5f56';
                    errorLine.textContent = `Command not found: ${cmd}. Type 'help' for list.`;
                    outputContainer.insertBefore(errorLine, inputLine);
                }

                // Reset input and scroll
                this.value = '';
                outputContainer.scrollTop = outputContainer.scrollHeight;
            }
        });

        // Focus terminal on click
        document.querySelector('.terminal-window').addEventListener('click', () => {
            input.focus();
        });

    </script>
</body>

