                    <path d="M100,50 Q70,-20 30,0" fill="none" stroke="#00ffff" stroke-width="2" />
                    <path d="M100,50 Q70,-20 30,0 L40,10 L100,55 Z" fill="#000" opacity="0.8" />

                    <!-- Right Set -->
                    <path d="M100,50 Q140,20 160,80" fill="none" stroke="#ff00ff" stroke-width="2" />
                    <path d="M100,50 Q140,20 160,80 L150,85 L100,55 Z" fill="#000" opacity="0.8" />

                    <path d="M100,50 Q150,0 180,30" fill="none" stroke="#00ffff" stroke-width="2" />
                    <path d="M100,50 Q150,0 180,30 L172,38 L100,55 Z" fill="#000" opacity="0.8" />

                    <path d="M100,50 Q130,-20 170,0" fill="none" stroke="#ff00ff" stroke-width="2" />
                    <path d="M100,50 Q130,-20 170,0 L160,10 L100,55 Z" fill="#000" opacity="0.8" />

                    <!-- Top -->
                    <path d="M100,50 Q100,-30 80,-10" fill="none" stroke="#00ffff" stroke-width="2" />
                    <path d="M100,50 Q100,-30 120,-10" fill="none" stroke="#ff00ff" stroke-width="2" />
                </g>
            </symbol>
        </defs>
    </svg>

    <!-- SOUND TOGGLE -->
    <button id="sound-toggle">Sound: ON</button>
    <audio id="bg-music" loop autoplay>
        <source src="music/RETRO1.m4a" type="audio/mp4">
    </audio>

    <!-- OPENING BLADES -->
    <div class="blade-cover blade-left"></div>
    <div class="blade-cover blade-right"></div>

    <!-- RETRO BACKGROUND EFFECTS -->
    <div class="retro-fog"></div>
    <div class="vhs-overlay"></div>
    <div class="rain-overlay"></div>

    <!-- HERO SECTION -->
    <header id="hero">
        <div class="scanline-overlay"></div>
        <div class="rain"></div>
        <div class="retro-sun"></div>
        <div class="cityscape"></div>
        <div class="horizon-glow"></div>

        <!-- UPGRADED TRON STATION -->
        <div class="tron-station" id="tron-station">
            <!-- Beam Container -->
            <div class="beam-container" id="beam-container">
                <div class="beam-core"></div>
            </div>

            <!-- High Detail SVG Structure -->
            <svg class="station-svg" viewBox="0 0 200 150" preserveAspectRatio="xMidYBottom">
                <defs>
                    <linearGradient id="metal-grad" x1="0" y1="0" x2="0" y2="1">
                        <stop offset="0%" stop-color="#0a101a" />
                        <stop offset="50%" stop-color="#203040" />
                        <stop offset="100%" stop-color="#050810" />
                    </linearGradient>
                    <linearGradient id="cyan-grad" x1="0" y1="0" x2="1" y2="1">
                        <stop offset="0%" stop-color="#00ffff" />
                        <stop offset="100%" stop-color="#0055ff" />
                    </linearGradient>
                    <filter id="glow-s" height="300%" width="300%" x="-100%" y="-100%">
                        <feGaussianBlur stdDeviation="2" result="coloredBlur" />
                        <feMerge>
                            <feMergeNode in="coloredBlur" />
                            <feMergeNode in="SourceGraphic" />
                        </feMerge>
                    </filter>
                    <filter id="glow-m" height="300%" width="300%" x="-100%" y="-100%">
                        <feGaussianBlur stdDeviation="4" result="coloredBlur" />
                        <feMerge>
                            <feMergeNode in="coloredBlur" />
                            <feMergeNode in="SourceGraphic" />
                        </feMerge>
                    </filter>
                </defs>

                <!-- Base Platform Rings (Perspective Flattened) -->
                <g transform="translate(100, 130) scale(1, 0.25)">
                    <!-- Outer Ring -->
                    <circle cx="0" cy="0" r="80" fill="none" stroke="#00ffff" stroke-width="2" opacity="0.3"
                        class="st-ring-pulse" />
                    <circle cx="0" cy="0" r="70" fill="none" stroke="#ff00ff" stroke-width="1" opacity="0.2" />
                    <!-- Mid Ring -->
                    <circle cx="0" cy="0" r="50" fill="rgba(0, 255, 255, 0.1)" stroke="#00ffff" stroke-width="4"
                        opacity="0.5" class="st-ring-pulse" style="animation-delay: 1s;" />
                    <!-- Inner Core Base -->
                    <circle cx="0" cy="0" r="20" fill="#000" stroke="#00ffff" stroke-width="2" filter="url(#glow-s)" />
                </g>

                <!-- Main Gateway Structure -->
                <g transform="translate(100, 130)" filter="url(#glow-s)">
                    <!-- Left Pylon -->
                    <path d="M-60,0 Q-50,-80 -20,-100 L-10,-100 Q-30,-80 -40,0 Z" fill="url(#metal-grad)"
                        stroke="#00ffff" stroke-width="1" opacity="0.9" />
                    <!-- Right Pylon -->
                    <path d="M60,0 Q50,-80 20,-100 L10,-100 Q30,-80 40,0 Z" fill="url(#metal-grad)" stroke="#00ffff"
                        stroke-width="1" opacity="0.9" />

                    <!-- Connecting Arcs / Energy Veins -->
                    <path d="M-20,-100 Q0,-90 20,-100" fill="none" stroke="#ff00ff" stroke-width="2" opacity="0.8" />
                    <path d="M-45,-20 L-20,-20" fill="none" stroke="#00ffff" stroke-width="1" opacity="0.5" />
                    <path d="M45,-20 L20,-20" fill="none" stroke="#00ffff" stroke-width="1" opacity="0.5" />
                </g>

                <!-- Central Core (Reactor) -->
                <g transform="translate(100, 125)">
                    <rect x="-10" y="-30" width="20" height="30" fill="#001122" stroke="none" />
                    <ellipse cx="0" cy="0" rx="10" ry="3" fill="#00ffff" opacity="0.5" />
                    <!-- Glowing Heart -->
                    <circle cx="0" cy="-15" r="6" fill="#00ffff" class="st-core-pulse" />
                    <!-- Side Vents -->
                    <rect x="-14" y="-25" width="4" height="20" fill="#00ffff" opacity="0.3" />
                    <rect x="10" y="-25" width="4" height="20" fill="#00ffff" opacity="0.3" />
                </g>
